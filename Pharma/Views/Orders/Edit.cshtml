@model Pharma.Models.Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order_Id" />
            <div class="form-group">
                <label asp-for="Order_Date" class="control-label"></label>
                <input asp-for="Order_Date" class="form-control" />
                <span asp-validation-for="Order_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order_User_Id" class="control-label"></label>
                <input asp-for="Order_User_Id" class="form-control" />
                <span asp-validation-for="Order_User_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order_UserName" class="control-label"></label>
                <input asp-for="Order_UserName" class="form-control" />
                <span asp-validation-for="Order_UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order_Medicine_Id" class="control-label"></label>
                <select asp-for="Order_Medicine_Id" class="form-control" asp-items="ViewBag.Order_Medicine_Id"></select>
                <span asp-validation-for="Order_Medicine_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
