@model Pharma.Models.Medicine;
@using Microsoft.AspNetCore.Identity;
@using Pharma.Areas.Identity.Data;

@inject SignInManager<ApplicationUser> SignInManager;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (!SignInManager.IsSignedIn(User))
{
    Context.Response.Redirect("/Identity/Account/Login");
}
<h4>Medicine</h4>
<h6> Add Medicine Details</h6>
 <a asp-action="Index">Back to List</a>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Medicine_Name" class="control-label">Name</label>
                <input asp-for="Medicine_Name" class="form-control" />
                <span asp-validation-for="Medicine_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine_Type" class="control-label">Type</label>
                <input asp-for="Medicine_Type" class="form-control" />
                <span asp-validation-for="Medicine_Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine_Reg_Number"  class="control-label" > Registration Number</label>
                <input asp-for="Medicine_Reg_Number"  class="form-control"  />
                <span asp-validation-for="Medicine_Reg_Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine_Size" class="control-label">Size</label>
                <input asp-for="Medicine_Size" class="form-control" />
                <span asp-validation-for="Medicine_Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine_Unit" class="control-label">Unit</label>
                <input asp-for="Medicine_Unit" class="form-control" />
                <span asp-validation-for="Medicine_Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine_Form" class="control-label">Form</label>
                <input asp-for="Medicine_Form" class="form-control" />
                <span asp-validation-for="Medicine_Form" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine_Qty" class="control-label">Quantity</label>
                <input asp-for="Medicine_Qty" class="form-control" />
                <span asp-validation-for="Medicine_Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine_Price" class="control-label">Price</label>
                <input asp-for="Medicine_Price" class="form-control" />
                <span asp-validation-for="Medicine_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine_Expiry_Date" class="control-label">Expiry Date</label>
                <input asp-for="Medicine_Expiry_Date" class="form-control" />
                <span asp-validation-for="Medicine_Expiry_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
