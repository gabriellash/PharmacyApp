@model IEnumerable<Pharma.Models.Request>
@using Microsoft.AspNetCore.Identity;
@using Pharma.Areas.Identity.Data;
@inject UserManager<ApplicationUser> UserManager;
@inject SignInManager<ApplicationUser> SignInManager;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Requests Done!</h1>
@if (!SignInManager.IsSignedIn(User))
{
    Context.Response.Redirect("/Identity/Account/Login");
}
<p>
   <!--  <a asp-action="Create">Create New</a> -->
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Request_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request_User_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine_Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Request_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Request_User_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medicine.Medicine_Name)
            </td>
            <td>
              <!--  <a asp-action="Edit" asp-route-id="@item.Request_Id">Edit</a> | -->
                <a asp-action="Details" asp-route-id="@item.Request_Id">Details</a> 
               <a asp-action="Delete" asp-route-id="@item.Request_Id">Delete</a> 
            </td>
        </tr>
}
    </tbody>
</table>
